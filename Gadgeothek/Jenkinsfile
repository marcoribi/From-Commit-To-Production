pipeline {
    agent {
        node {
            label 'jenkins-slave5.yvu.ch'
        }
    }

    stages {
        stage('Build') {
            steps {
                sh 'cd Gadgeothek; ./gradlew build'
                sh 'cd Gadgeothek; ./gradlew lint'
            }
            post {
                always {
                    archiveArtifacts 'Gadgeothek/app/build/outputs/apk/*.apk'
                }
            }
        }

        stage('End2End Tests') {
            steps {
                sh 'echo End2End Tests'
            }
        }

        stage('Unit Tests') {
            steps {
                sh 'cd Gadgeothek; ./gradlew test'
            }
            post {
                always {
                    junit 'build/test-results/**/*.xml'
                }
            }
        }

        stage('Package') {
            steps {
                sh 'echo Package'
            }
        }
    }
}