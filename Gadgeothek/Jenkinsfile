pipeline {
    agent {
        node {
            label 'jenkins-slave5.yvu.ch'
        }
    }

    stages {
        stage('Build') {
            steps {
                sh 'ch Gadgeothek; ./gradlew clean'
                sh 'cd Gadgeothek; ./gradlew build'
                sh 'cd Gadgeothek; ./gradlew lint'
            }
            post {
                always {
                    archiveArtifacts 'Gadgeothek/app/build/outputs/apk/*.apk'
                    junit allowEmptyResults: true, testResults: '**/build/test-results/**/*.xml'
                }
            }
        }

        stage('End2End Tests') {
            steps {
                sh 'cd Gadgeothek; ./gradlew connectedAndroidTest'
            }
        }

        stage('Package') {
            steps {
                sh 'echo Package'
            }
        }
    }
}
